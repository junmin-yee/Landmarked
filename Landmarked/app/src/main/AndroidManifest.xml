<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="landmarked.landmarked">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/landmarked_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/landmarked_icon_round"
        android:supportsRtl="true"
        android:theme="@style/newTheme">
        <activity android:name=".DataManipulation.addCustomLandmark"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GUI.RetrievedLandmarks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.LoadingPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.LandmarkSelected"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.LandmarkHistory"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LandmarkedMain"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GUI.DisplayMap"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Database.CustomLandmark"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.GoogleAuthentication"
            android:screenOrientation="portrait" />
    </application>

</manifest>